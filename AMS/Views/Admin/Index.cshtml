@model IEnumerable<AMS.Models.Attendance>
@*@model IEnumerable<AMS.Models.Attendance>*@
@{
    ViewBag.Title = "Admin Page";
    DateTime dt = DateTime.Today;
    int month = dt.Month;
    int year = dt.Year;
}



<div class="main">
    <h2>Admin</h2>
    <div class="row">
        @* SIDEBAR NAVIGATION *@
        <div class="col-md-4">
            <ul class="sidebar">
                <li class="list">
                    <input type="button"
                           value="Monthly Attendance Report"
                           id="viewAllEmployeeAttendance"
                           class="btn btn-primary btn-lg m-5 p-5"
                           onclick="location.href='@Url.Action("viewAllEmployeeAttendance", "Admin", new {y = year, m = month})'" />
                </li>

                <li class="list">
                    <input type="button"
                           value="Employee Info"
                           id="viewAllEmployeeAttendance"
                           class="btn btn-primary btn-lg m-5 p-5"
                           onclick="location.href='@Url.Action("manageLogin", "Admin")'" />
                </li>
                <li class="list">
                    <input type="button"
                           value="Manage Employee Leave"
                           id="viewAllEmployeeLeave"
                           class="btn btn-primary btn-lg m-5 p-5"
                           onclick="location.href='@Url.Action("Leave", "Admin")'" />
                </li>
            </ul>
        </div> @* SIDEBAR NAVIGATION END!! *@

        @*All users present day attendance*@
        <div class="col-md-7">
            <h3>Today Attendance Report</h3>
            <table class="table table-striped table-dark">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Employee_id)
                    </th>
                   
                    <th>
                        @Html.DisplayNameFor(model => model.loginTime)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.logoutTime)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.AttendanceStatus)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <a href="@Url.Action("currMonthEmpDetails", "Admin", new { empId = item.Employee_id})">@item.Employee_id</a>
                        </td>
                        
                        <td>
                            @Html.DisplayFor(modelItem => item.loginTime)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.logoutTime)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AttendanceStatus)
                        </td>
                      
                    </tr>
                }

            </table>
        </div> @*All users present day attendance <DIV> END!!*@
    </div>
</div>


