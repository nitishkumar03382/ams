
@{
    ViewBag.Title = "currMonthEmpDetails";
    DateTime dt = DateTime.Today;
    int year = Convert.ToInt32(ViewBag.year);
    int month = Convert.ToInt32(ViewBag.month);
    string[] mArr = { "January", "February", "March", "April", "May", "June", "July", "August", "September", "October", "November", "December" };
}


<style type="text/css">
    table {
        width: 70%;
        border-collapse: collapse;
        margin-left: auto;
        margin-right: auto;
        table-layout: fixed;
    }

    table, th, td {
        border: 2px solid dimgray;
        border-radius: 5px;
    }


    th {
        text-align: left;
        font-size: 22px;
        background-color: #838996;
        background-image: linear-gradient(dimgray,gray,#838996);
        color: white;
    }


    th, td {
        padding: 10px;
        width: 25%;
    }

    tr:nth-child(even) {
        background-color: #fff;
    }

    tr:nth-child(odd) {
        background-color: #eee;
    }

    * {
        margin: 0px;
        padding: 0px;
    }

    body {
        font-family: arial;
    }

    .main {
        margin: 2%;
    }

    .card {
        width: 20%;
        display: inline-block;
        box-shadow: 2px 2px 20px black;
        border-radius: 5px;
        margin: 2%;
    }

    .image img {
        width: 100%;
        border-top-right-radius: 5px;
        border-top-left-radius: 5px;
    }

    .title {
        text-align: center;
        padding: 10px;
    }

    h1 {
        font-size: 20px;
    }

    .des {
        padding: 10px;
        text-align: center;
        padding-top: 10px;
        border-bottom-right-radius: 5px;
        border-bottom-left-radius: 5px;
        background-color: aliceblue;
    }
</style>
@* Navbar *@
<ul class="sidebar">
    <li class="list">
        <input type="button"
               value="Admin"
               id="viewAllEmployeeAttendance"
               style="background-color:white; color: red; text-align:left;"
               class="btn btn-link btn-lg m-5 p-5"
               onclick="location.href='@Url.Action("Index", "Admin")'" />
    </li>
    <li class="list">
        <input type="button"
               value="Monthly Attendance Report"
               id="viewAllEmployeeAttendance"
               class="btn btn-link btn-lg m-5 p-5"
               onclick="location.href='@Url.Action("viewAllEmployeeAttendance", "Admin", new {y = year, m = month})'" />
    </li>

    <li class="list">
        <input type="button"
               value="Employee Info"
               id="viewAllEmployeeAttendance"
               class="btn btn-link btn-lg m-5 p-5"
               onclick="location.href='@Url.Action("manageLogin", "Admin")'" />
    </li>
    <li class="list">
        <input type="button"
               value="Manage Employee Leave"
               id="viewAllEmployeeLeave"
               class="btn btn-link btn-lg m-5 p-5"
               onclick="location.href='@Url.Action("Leave", "Admin")'" />
    </li>
</ul>
@* SIDEBAR NAVIGATION END!! *@
<center>
    <h3 class="text-center">@mArr[@month - 1] - @year Report</h3>
    <hr width="60%" />
    <input type="button"
           class="btn btn-primary"
           value="Filter By Year and Month"
           onclick="location.href='@Url.Action("filterDashBoard", "Admin", new { empId = ViewBag.empId})'" />
</center>

<center>
    <table>
        <tr>
            <th>Name : </th>
            <td>  @ViewBag.name</td>
        </tr>
        <tr>
            <th>Employee ID : </th>
            <td>@ViewBag.empId</td>
        </tr>
        <tr>
            <th>Superviser ID : </th>
            <td>@ViewBag.supervisorId</td>
        </tr>
    </table>
</center>
<br>
<br>

<div class="main">

    <!--cards -->
    <div class="atd-dashboard">
        <div class="card">
            <div class="image">
                <img src="~/Content/img1.jpg">
            </div>
            <div class="title">
                <h1>
                    Working Hours
                </h1>
            </div>
            <div class="des">
                <p>@ViewBag.workHour Hours @ViewBag.workMin minutes</p>
            </div>
        </div>
        <!--cards -->


        <div class="card">
            <div class="image">
                <img src="~/Content/img2.jpg">
            </div>
            <div class="title">
                <h1>
                    Present
                </h1>
            </div>
            <div class="des">
                <p>@ViewBag.present Days</p>
            </div>
        </div>
        <!--cards -->


        <div class="card">
            <div class="image">
                <img src="~/Content/img3.jpg">
            </div>
            <div class="title">
                <h1>
                    Absent
                </h1>
            </div>
            <div class="des">
                <p>@ViewBag.absent Days</p>
            </div>
        </div>
        <!--cards -->


        <div class="card">
            <div class="image">
                <img src="~/Content/img4.jpg">
            </div>

            <div class="title">
                <h1>
                    Leaves Taken
                </h1>
            </div>
            <div class="des">
                <p>@ViewBag.leave Days</p>
            </div>
        </div>
        <!--cards -->
    </div>
    <div class="link-dashboard">
        <div>
            @Html.ActionLink("More", "empDetails", new { empId = ViewBag.empId })
        </div>
        <div>

        </div>
    </div>
</div>
