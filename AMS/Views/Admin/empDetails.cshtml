
@{
    ViewBag.Title = "empDetails";
    DateTime dt = DateTime.Today;
    int year = Convert.ToInt32(ViewBag.year);
    int month = Convert.ToInt32(ViewBag.month);
    string[] mArr = { "January", "February", "March", "April", "May", "June", "July", "August", "September", "October", "November", "December" };
}
<style type="text/css">
    table {
        width: 70%;
        border-collapse: collapse;
        margin-left: auto;
        margin-right: auto;
        table-layout: fixed;
    }

    table, th, td {
        border: 2px solid dimgray;
        border-radius: 5px;
    }


    th {
        text-align: left;
        font-size: 22px;
        background-color: #838996;
        background-image: linear-gradient(dimgray,gray,#838996);
        color: white;
    }


    th, td {
        padding: 10px;
        width: 25%;
    }

    tr:nth-child(even) {
        background-color: #fff;
    }

    tr:nth-child(odd) {
        background-color: #eee;
    }

    * {
        margin: 0px;
        padding: 0px;
    }

    body {
        font-family: arial;
    }

    .main {
        margin: 2%;
    }

    .card {
        width: 20%;
        display: inline-block;
        box-shadow: 2px 2px 20px black;
        border-radius: 5px;
        margin: 2%;
    }

    .image img {
        width: 100%;
        border-top-right-radius: 5px;
        border-top-left-radius: 5px;
    }

    .title {
        text-align: center;
        padding: 10px;
    }

    h1 {
        font-size: 20px;
    }

    .des {
        padding: 10px;
        text-align: center;
        padding-top: 10px;
        border-bottom-right-radius: 5px;
        border-bottom-left-radius: 5px;
        background-color: aliceblue;
    }
</style>
