@model AMS.Models.Employee

@{
    ViewBag.Title = "EmployeeHome";
}

<link href="@Url.Content("~/content/bootstrap.min.css")" rel="stylesheet" type="text/css" />
<link href="@Url.Content("~/content/EmployeeHome.css")" rel="stylesheet" type="text/css" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
@*<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">*@
<h1 class="text-center">@ViewBag.empName</h1>
<h2 class="text-center">@Session["userId"].ToString()</h2>
<br />
<br />


@*//attendance section for employee ==============================*@


    <div class="markAttd">
        <h2 class="text-center">Mark Your Attendance</h2>
                <div class="btn-container">
                    
                    <div>
                        <input type="button"
                               value="Attendance Login"
                               id="btnLogin"
                               style=""
                               class="btn btn-success"
                               onclick="location.href='@Url.Action("AttendanceLogin", "Employee")'" />
                    </div>
                    <div>
                        <input type="button"
                               value="Attendance Logout"
                               id="btnLogout"
                               style=""
                               class="btn btn-primary"
                               onclick="location.href='@Url.Action("AttendanceLogout", "Employee")'" />
                    </div>
                </div>


    </div>



<div class="container">
    <div class="row">
        @*// Leave ============================================*@
        <div class="col-5 report-sec1">
            <div class="container bg-secondary text-white">
                <h2>Apply For Leave</h2>
                <div class="form-horizontal">
                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            <input type="button"
                                   value="Apply for leave"
                                   id="leaveApplybtn"
                                   class="btn btn-primary btn-lg m-5 p-5"
                                   onclick="location.href='@Url.Action("LeaveApply", "Employee")'" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
        @*Apply for leave section is here===================================*@
        <div class="col-5 report-sec2">
            <div class="container bg-secondary text-white">
                <h2>View Attendance Report</h2>
                <div class="form-horizontal">
                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            <input type="button"
                                   value="Attendance Report"
                                   id="viewAtdReport"
                                   class="btn btn-primary btn-lg m-5 p-5"
                                   onclick="location.href='@Url.Action("viewAtdReport", "Employee")'" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
