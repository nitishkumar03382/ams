@using AMS.Models
@model Login
@{
    List<SelectListItem> listItems = new List<SelectListItem>();
    listItems.Add(new SelectListItem
    {
        Text = "Employee",
        Value = "1",
        Selected = true
    });
    listItems.Add(new SelectListItem
    {
        Text = "Admin",
        Value = "0"
    });
}


@{
    ViewBag.Title = "Index";
}

<h2>EXL Services Attendance Portal</h2>
<img src="https://upload.wikimedia.org/wikipedia/commons/thumb/9/91/Exl_logo_rgb_orange_pos.jpg/800px-Exl_logo_rgb_orange_pos.jpg?20211026082830"
