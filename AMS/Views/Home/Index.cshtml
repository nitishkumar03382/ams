<div class="login">
    <h5>Login</h5>
    @Html.BeginForm("Login", "Home", FormMethod.Post)
    {
        <form>
            <label>Login Id:</label>
            @Html.TextBoxFor(m => m.userId) <br>
            <label>Password: </label>
            @Html.TextBoxFor(m => m.password) <br>
            <label>Login As</label>
            @Html.DropDownListFor(m => m.userTypeId, listItems, "-- Select Status --")
            <input type="submit" />
        </form>
    }
</div>




